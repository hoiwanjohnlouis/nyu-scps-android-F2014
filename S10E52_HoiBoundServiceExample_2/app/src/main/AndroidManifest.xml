<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hoiwanlouis.s10e52_hoiboundserviceexample_2" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hoiwanlouis.s10e52_hoiboundserviceexample_2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.hoiwanlouis.s10e52_hoiboundserviceexample_2.LocalService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <activity
            android:name="com.hoiwanlouis.s10e52_hoiboundserviceexample_2.LocalActivity"
            android:label="@string/title_activity_local"
            android:parentActivityName="com.hoiwanlouis.s10e52_hoiboundserviceexample_2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hoiwanlouis.s10e52_hoiboundserviceexample_2.MainActivity" />
        </activity>

        <service
            android:name="com.hoiwanlouis.s10e52_hoiboundserviceexample_2.MessengerService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <activity
            android:name="com.hoiwanlouis.s10e52_hoiboundserviceexample_2.MessengerActivity"
            android:label="@string/title_activity_messenger"
            android:parentActivityName="com.hoiwanlouis.s10e52_hoiboundserviceexample_2.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hoiwanlouis.s10e52_hoiboundserviceexample_2.MainActivity" />
        </activity>

    </application>

</manifest>
