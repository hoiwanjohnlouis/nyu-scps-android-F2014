<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout_large_land"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    >

    <fragment
        android:id="@+id/settingsFragment_large_land"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:name="com.example.hoiwanlouis.myflagquiz.SettingsFragment"
        android:layout_weight="1" />

    <fragment
        android:id="@+id/quizFragment_large_land"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:name="com.example.hoiwanlouis.myflagquiz.QuizFragment"
        android:layout_weight="2" />


</LinearLayout>