<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>


    <style name="FragmentLabelTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="FragmentTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/textview_border</item>
    </style>

    <style name="FragmentEditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/textview_border</item>
    </style>



    <style name="input_layout" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/fragment_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/fragment_horizontal_margin</item>
    </style>


    <style name="heading1_layout" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="heading1_field" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/ticker_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/ticker_horizontal_margin</item>
    </style>


    <style name="heading2_layout" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="heading2_field" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/ticker_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/ticker_horizontal_margin</item>
    </style>


    <style name="item_layout" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="item_field" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/ticker_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/ticker_horizontal_margin</item>
    </style>


    <style name="symbolList" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_marginLeft">@dimen/ticker_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/ticker_horizontal_margin</item>

        <item name="android:divider">#000</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:isScrollContainer">true</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>



    <style name="copyright_layout" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="copyright_textView" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
<!--
        <item name="android:paddingLeft">@dimen/fragment_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/fragment_horizontal_margin</item>
-->
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">@dimen/abc_text_size_caption_material</item>
    </style>


</resources>
